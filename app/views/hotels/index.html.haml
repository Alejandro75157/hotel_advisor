%br/
- @hotels.each do |hotel|
  .hotel_item.span6
    %a{:href => "/hotels/#{hotel.id}"}
      %img.main_img{:src => hotel.image}/
    .inner_info
      %p.title
        %a{:href => "/hotels/#{hotel.id}"}
          = hotel.title
      %p.price
        Price: $#{hotel.price_for_room}
      %p.breakfast
        Breakfast
        - if hotel.breakfast_included?
          included
        - else
          not included
        |
      %hr{:align => "center", :color => "#ddd", :size => "1", :width => "100%"}/
      %p.manipulate_hotel
        = link_to 'Edit', edit_hotel_path(hotel)
        |
      %p.manipulate_hotel= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' }
%a.btn.btn-primary.span6{:href => "/hotels/new"} New Hotel
