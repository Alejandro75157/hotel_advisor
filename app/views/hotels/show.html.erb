<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @hotel.title %>
</p>

<p>
  <strong>Breakfast included:</strong>
  <%= @hotel.breakfast_included %>
</p>

<p>
  <strong>Room description:</strong>
  <%= @hotel.room_description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @hotel.image.url(:small) %>
</p>

<p>
  <strong>Price for room:</strong>
  <%= @hotel.price_for_room %>
</p>


<%= link_to 'Edit', edit_hotel_path(@hotel) %> |
<%= link_to 'Back', hotels_path %>

<h2>Comments</h2>
<div id="comments">
  <%= render partial: "comment", collection: @hotel.comments, as: :comment %>
</div>

<% if user_signed_in? %>
    <%= form_for [@hotel, Comment.new] do |f| %>

        <div class="field">
          <%= f.label :body, "New comment" %><br>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit "Add comment" %>
        </div>
    <% end %>
<% else %>
    <p>Please sign in or sign up to be able leave comments here</p>
<% end %>

